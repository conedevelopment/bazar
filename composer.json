{
    "name": "thepinecode/bazar",
    "description": "Bazar is a drop-in package for e-commerce Laravel applications.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Cone Development",
            "email": "hello@conedevelopment.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bazar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bazar\\Tests\\": "tests/",
            "Bazar\\Database\\Seeders\\": "database/seeders/",
            "Bazar\\Database\\Factories\\": "database/factories/"
        }
    },
    "require": {
        "php": "^7.3",
        "laravel/framework": "^8.0"
    },
    "require-dev": {
        "facade/ignition": "^2.3.6",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.0",
        "laravel/laravel": "dev-master",
        "laravel/ui": "^2.2"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bazar\\BazarServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "check:sqlite": "@php tests/check-sqlite-version.php"
    }
}
